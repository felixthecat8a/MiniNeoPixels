# EditorConfig is awesome: https://EditorConfig.org
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = tab
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C, C++ and Arduino files
[*.{ino,h,cpp}]
indent_style = space
indent_size = 4
max_line_length = 120

# Markdown files (README.md)
[*.md]
indent_style = space
max_line_length = 80
trim_trailing_whitespace = false

# YAML files (GitHub workflows)
[*.{yaml,yml,json}]
indent_style = space
indent_size = 2
